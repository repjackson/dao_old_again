    .ui.left.icon.fluid.input
        i.search.icon
        input.model_filter(type='text' placeholder='filter...' autofocus='autofocus')
    
    .ui.stackable.four.column.padded.grid
        each role_models
            .column
                .ui.segment.home_segment.set_model
                    .ui.header 
                        +i name=icon
                        |#{title}
                    |#{description}
                    .ui.small.header id #{_id}
                    a.ui.icon.big.button(href="/m/#{slug}")
                        i.right.chevron.icon
                    if is_dev
                        each view_roles
                            .ui.basic.label #{this}
                        +remove_button

