template(name='login')
    .ui.padded.stackable.grid
        .centered.row
            .ten.wide.column
                .ui.center.aligned.big.header
                    i.huge.grey.yin.yang.icon
                    //- |login
                if message
                    h4.ui.center.aligned.header #{message}
                .ui.fluid.large.input(class=login_class)
                    .ui.inline.small.grey.header 
                        //- +i name='user'
                        i.user.icon
                        //- |username
                    input.username(type='text')
                .ui.fluid.large.input(class=login_class)
                    .ui.inline.small.grey.header 
                        //- +i name='lock'
                        i.lock.icon
                        //- | password
                    input.password(type='password')
                //- if username
                if logging_in
                    .ui.fluid.big.circular.button.enter(title="login #{username}" class=enter_class)
                        i.sign.in.alternate.icon
                        //- +i name='enter-2' classes='ui mini inline image'
                        //- |login
                        | #{username}
                        //- i.right.chevron.icon
                else
                    if username
                        .ui.center.aligned.segment
                            .ui.small.header no '#{username}' user
                            a.ui.button(href='/register')
                                i.user.plus.icon
                                //- +i name='enter-2' classes='ui mini inline image'                    
                                //- | register
                .ui.center.aligned.basic.segment    
                    a.ui.large.icon.circular.button(href='/forgot_password')
                        //- +i name='forgot-password' classes='ui mini inline image'
                        i.question.icon
                        //- |forgot password
                    a.ui.large.circular.icon.button(href='/register') 
                        //- +i name='add-user-male' classes='ui mini inline image'                    
                        i.user.plus.icon
                        //- |register
