template(name='blog')
    .ui.stackable.padded.grid
        .sixteen.wide.column
            .ui.header blog
        .row
            .six.wide.column
                .ui.button.add_post
                    i.plus.icon
                    | post
                +cloud filter='post'
            .ten.wide.column
                each posts
                    +post
                    
                    
template(name='post')
    .ui.fluid.segment
        .ui.header #{title}
        |!{content}
        each tags
            .ui.basic.label #{this}
        +edit_button
        +view_button






template(name='post_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        i.pencil.icon
                        |edit post
                    a.ui.big.icon.fluid.button(href="/post/#{_id}/view" title='save')
                        i.green.checkmark.icon
                    +remove_button
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                .twelve.wide.column 
                    +text_edit key='title' label='title' icon='title' direct=true
                    +html_edit key='description' label='description' icon='content' direct=true
                    +boolean_edit key='published' label='published' icon='checkmark' direct=true
                     
                     
template(name='post_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    a.ui.fluid.button(href="/t/#{tribe_slug}/blog")
                        +i name='posts' classes='ui avatar image'
                        |posts
                    .ui.header view post
                    a.ui.big.icon.button(href="/post/#{_id}/edit")
                        i.pencil.icon
                    +voting_full
                    +viewing
                .twelve.wide.column 
                    +text_view key='title' label='title' direct=true
                    +array_view key='tags' label='tags' icon='tags' direct=true
                    +html_view key='description' icon='content' label='description' direct=true
                    +boolean_view key='published' label='published' direct=true
                    +comments
