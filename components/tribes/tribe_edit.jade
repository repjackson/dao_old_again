template(name='tribe_edit_layout')
    +nav
    +yield 'sub_nav'
    +yield 'sub_sub_nav'
    +yield
    +footer 


template(name='tribe_edit_nav')
    .ui.attached.borderless.inverted.menu
        a.item(href="/t/#{current_tribe.slug}/admin/dashboard" class="isActiveRoute regex='admin_dashboard'") dashboard
        a.item(href="/t/#{current_tribe.slug}/admin/contacts" class="isActiveRoute regex='admin_contacts'") contacts
        a.item(href="/t/#{current_tribe.slug}/admin/website" class="isActiveRoute regex='admin_website'") website
        a.item(href="/t/#{current_tribe.slug}/admin/events" class="isActiveRoute regex='admin_events'") events
        a.item(href="/t/#{current_tribe.slug}/admin/members" class="isActiveRoute regex='admin_members'") members
        a.item(href="/t/#{current_tribe.slug}/admin/store" class="isActiveRoute regex='admin_store'") store
        a.item(href="/t/#{current_tribe.slug}/admin/donations" class="isActiveRoute regex='admin_donations'") donations
        a.item(href="/t/#{current_tribe.slug}/admin/finances" class="isActiveRoute regex='admin_finances'") finances
        a.item(href="/t/#{current_tribe.slug}/admin/email" class="isActiveRoute regex='admin_emails'") email
        a.item(href="/t/#{current_tribe.slug}/admin/settings" class="isActiveRoute regex='admin_settings'") settings
         
